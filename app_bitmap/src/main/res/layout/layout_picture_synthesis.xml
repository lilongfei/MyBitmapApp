<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_imageRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_picture1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginRight="10dp"
            android:background="@color/green"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/img_picture2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_picture1"
            android:background="@color/green"
            android:scaleType="fitCenter" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_resultPicture"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_below="@id/rl_imageRes"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        android:scaleType="fitCenter" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_choosePicture1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/choose_picture1"
                android:textAllCaps="false"
                android:textColor="@color/selector_text_color"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_choosePicture2"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/choose_picture2"
                android:textAllCaps="false"
                android:textColor="@color/selector_text_color"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_synthesisLighten"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/synthesis_lighten"
                android:textAllCaps="false"
                android:textColor="@color/selector_text_color"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_synthesisDarken"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/synthesis_darken"
                android:textAllCaps="false"
                android:textColor="@color/selector_text_color"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_synthesisMultiply"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/synthesis_multiply"
                android:textAllCaps="false"
                android:textColor="@color/selector_text_color"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_synthesisScreen"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/synthesis_screen"
                android:textAllCaps="false"
                android:textColor="@color/selector_text_color"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>